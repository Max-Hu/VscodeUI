{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug PR Reviewer Extension (Copilot)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Debug PR Reviewer Extension (Isolated)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extensions",
        "--user-data-dir=${workspaceFolder}/.vscode/.debug/user-data",
        "--extensions-dir=${workspaceFolder}/.vscode/.debug/extensions"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: build"
    }
  ]
}
